<div class="dropdown @(isOpened ? "opened" : "")" @onclick="() => Toggle()">
    <a>@MenuText <i class="fas @MenuIcon"></i></a>
    <ul class="dropdown-content">
        @ChildContent
    </ul>
</div>

@code {
    bool isOpened;

    [Parameter]
    public string MenuText { get; set; }

    [Parameter]
    public string MenuIcon { get; set; } = "fa-cog";

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    public void Toggle()
    {
        isOpened = !isOpened;
    }
}